{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",  // .nuxt/tsconfig.json 파일 상속. 그 위에 현재 설정이 덮어씌워짐.
  "configurations": [
    {
      // "type": "node",  // 어떤 타입 정의 파일을 프로젝트에 포함할지 정의. "node"는 Node.js 환경에서 사용하는 전역 객체(예: process, Buffer, __dirname)
      "strict": true,   // 엄격한 타입 검사 모드. strictNullChecks, noImplicitAny, strictFunctionTypes 등
        "baseUrl": "."   // 상대 경로 import 시 기준이 되는 루트 디렉토리. "." → 현재 프로젝트 루트
    }
  ]
}
